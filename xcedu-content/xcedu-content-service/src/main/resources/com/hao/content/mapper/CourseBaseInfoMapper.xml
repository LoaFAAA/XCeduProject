<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hao.content.mapper.CourseBaseInfoMapper">


    <select id="selectById" resultType="com.hao.centent.model.po.CourseBase">
        select * from course_base where id = #{id}
    </select>

    <select id="selectPage" resultType="com.hao.centent.model.po.CourseBase">
     select * from course_base
     <where>
         <if test="auditStatus != null and auditStatus != ' '">
             and audit_status = #{auditStatus}
         </if>
         <if test="courseName != null and courseName != ' '">
             and name = #{courseName}
         </if>
         <if test="publicStatus != null and publicStatus != ' '">
             and status = #{publicStatus}
         </if>
     </where>
     order by create_date desc
    </select>
</mapper>
